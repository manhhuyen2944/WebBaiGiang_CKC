@model WebBaiGiang_CKC.Models.TaiKhoan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="TaiKhoan" asp-action="Index">Quản lý tài khoản</a></li>
    <li class="breadcrumb-item"><a asp-controller="TaiKhoan" asp-action="Delete">Xóa</a></li>
</ol>

<h1 style="text-align: center;">XÓA TÀI KHOẢN</h1>

<h3 style="text-align: center;">Bạn có muốn xóa tài khoản này không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MSSV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MSSV)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="MSSV" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
