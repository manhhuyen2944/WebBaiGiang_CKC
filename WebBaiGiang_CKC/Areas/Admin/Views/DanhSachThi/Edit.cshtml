@model WebBaiGiang_CKC.Models.DanhSachThi

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var taikhoan = @ViewBag.TaiKhoanId;
    var kykiemtra = @ViewBag.KyKiemTraId;
}
<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="DanhSachThi" asp-action="Index">Quản lý danh sách thi</a></li>
    <li class="breadcrumb-item"><a asp-controller="DanhSachThi" asp-action="Edit">Sửa </a></li>
</ol>
<h1 style="text-align: center;">SỬA DANH SÁCH THI</h1>
<hr />
<br />
<div class="row">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="DanhSachThiId" />
        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="TaiKhoan.HoTen" class="control-label" for="TaiKhoanId"></label>
            <select asp-for="TaiKhoanId" class="form-control w-100" asp-items="taikhoan"></select>
            <span asp-validation-for="TaiKhoanId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="KyKiemTra.TenKyKiemTra" class="control-label" for="KyKiemTraId"></label>
            <select asp-for="KyKiemTraId" class="form-control w-100" asp-items="kykiemtra"></select>
            <span asp-validation-for="KyKiemTraId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group form-check flex-grow-1 mx-4">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
            </label>
        </div>
        <br />
        <div class="form-group flex-grow-1 mx-4">
            <div style="float: left; padding-right:10px">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </form>

</div>
