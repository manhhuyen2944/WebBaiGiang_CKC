@model WebBaiGiang_CKC.Models.CauHoi

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="KhoCauHoi" asp-action="Index">Quản lý  câu hỏi</a></li>
    <li class="breadcrumb-item"><a asp-controller="KhoCauHoi" asp-action="Delete">Xóa </a></li>
</ol>
<style>
    h1, h3 {
        text-align: center;
    }
</style>
<h1>Xóa Câu Hỏi Trong Kho Câu Hỏi </h1>
<h3 style="text-align: center;">Bạn có muốn xóa tài khoản này không?</h3>
<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chuong.TenChuong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chuong.TenChuong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoiDung)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.NoiDung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DapAnA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DapAnB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnB)
        </dd>
        <dt class="col-sm-2">
