        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnDung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoKho)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoKho)
        </dd>
    </dl>
    <br>
    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="ChuongId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
