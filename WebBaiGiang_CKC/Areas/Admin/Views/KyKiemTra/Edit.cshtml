@model WebBaiGiang_CKC.Models.KyKiemTra

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="KyKiemTra" asp-action="Index">Quản lý kỳ kiểm tra</a></li>
    <li class="breadcrumb-item"><a asp-controller="KyKiemTra" asp-action="Edit">Sửa</a></li>
</ol>
<h1 style="text-align: center;">SỬA KỲ KIỂM TRA</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KyKiemTraId" />
            <div class="form-group">
                <label asp-for="TenKyKiemTra" class="control-label"></label>
                <input asp-for="TenKyKiemTra" class="form-control" />
                <span asp-validation-for="TenKyKiemTra" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <label asp-for="ThoiGianBatDau" class="control-label"></label>
                <input asp-for="ThoiGianBatDau" class="form-control" />
                <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ThoiGianKetThuc" class="control-label"></label>
                <input asp-for="ThoiGianKetThuc" class="form-control" />
                <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ThoiGianLamBai" class="control-label"></label>
                <input asp-for="ThoiGianLamBai" class="form-control" />
                <span asp-validation-for="ThoiGianLamBai" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <div style="float: left; padding-right:10px">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
                <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>

            </div>
        </form>
    </div>
</div>
