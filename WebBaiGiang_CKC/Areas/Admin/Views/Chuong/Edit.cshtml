@model WebBaiGiang_CKC.Models.Chuong

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var MonHocId = @ViewBag.MonHocId;
}
}

<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="Chuong" asp-action="Index">Quản lý chương</a></li>
    <li class="breadcrumb-item"><a asp-controller="Chuong" asp-action="Edit">Sửa</a></li>

</ol>

<h1 style="text-align: center;">SỬA CHƯƠNG</h1>

<hr />
<div class="row">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ChuongId" />
        <br />

        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="MonHocId" class="control-label"></label>
            <select asp-for="MonHocId" class="form-control w-100" asp-items="MonHocId"></select>
        </div>
        <br />
        <div class="form-group  flex-grow-1 mx-4">
            <label asp-for="ChuongId" class="control-label"></label>
            <input asp-for="ChuongId" class="form-control w-100" />
            <span asp-validation-for="ChuongId" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="TenChuong" class="control-label"></label>
            <input asp-for="TenChuong" class="form-control w-100" />
            <span asp-validation-for="TenChuong" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group flex-grow-1 mx-4">
            <div style="float: left; padding-right:10px">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </form>

</div>

