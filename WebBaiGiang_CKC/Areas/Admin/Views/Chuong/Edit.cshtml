@model WebBaiGiang_CKC.Models.Chuong

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="Chuong" asp-action="Index">Quản lý chương</a></li>
    <li class="breadcrumb-item"><a asp-controller="Chuong" asp-action="Edit">Sửa</a></li>

</ol>

<h1 style="text-align: center;">SỬA CHƯƠNG</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChuongId" />
            <br />
            <div class="form-group">
                <label asp-for="MonHocId" class="control-label"></label>
                <select asp-for="MonHocId" class="form-control" asp-items="ViewBag.MonHocId"></select>
                <span asp-validation-for="MonHocId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TenChuong" class="control-label"></label>
                <input asp-for="TenChuong" class="form-control" />
                <span asp-validation-for="TenChuong" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div style="float: left; padding-right:10px">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
                <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

