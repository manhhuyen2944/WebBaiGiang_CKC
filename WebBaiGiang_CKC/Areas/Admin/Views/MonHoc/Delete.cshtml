@model WebBaiGiang_CKC.Models.MonHoc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">

    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="MonHoc" asp-action="Index">Quản lý môn học</a></li>
    <li class="breadcrumb-item"><a asp-controller="MonHoc" asp-action="Delete">Xóa</a></li>

</ol>

<style>
    h1, h3 {
        text-align: center;
    }
</style>
<h1>Xóa môn học</h1>
<h3>Bạn có muốn xóa môn học này không?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenMonHoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenMonHoc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaMonHoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaMonHoc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="MonHocId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
